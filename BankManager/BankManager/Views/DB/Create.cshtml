@model BankManager.Client

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


<div style="width:1024px">

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Create client</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.ClientContactNumber)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ClientContactNumber)
            @Html.ValidationMessageFor(model => model.ClientContactNumber)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.FirstName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FirstName)
            @Html.ValidationMessageFor(model => model.FirstName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LastName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LastName)
            @Html.ValidationMessageFor(model => model.LastName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DateOfBirth)
        </div>
        <div class="editor-field" id="jqxdatetimeinput">
            @Html.EditorFor(model => model.DateOfBirth)
            @Html.ValidationMessageFor(model => model.DateOfBirth)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PhoneNumber)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PhoneNumber)
            @Html.ValidationMessageFor(model => model.PhoneNumber)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Deposit)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Deposit)
            @Html.ValidationMessageFor(model => model.Deposit)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.StatusID)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StatusID)
            @Html.ValidationMessageFor(model => model.StatusID)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<div id='calendar'>
        <div id='Statuses'>
        <div id='jqxcombobox'>
        </div>
    </div>
</div>

        <script type="text/javascript">
            $(document).ready(function () {
                $("input[type=text]").jqxInput({
                    width: '200px',
                    height: '25px',
                    minLength: 1,
                    theme: 'energyblue'
                });
                $("#jqxdatetimeinput").jqxDateTimeInput({
                    width: '250px',
                    height: '25px',
                    minLength: 1,
                    theme: 'energyblue'
                });
            });
        </script>
