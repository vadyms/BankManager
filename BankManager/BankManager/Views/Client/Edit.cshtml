@model BankManager.Client

@{
    ViewBag.Title = "Edit";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Edit client</legend>
        <table>
            <tr>
                <td style="text-align:right">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.ClientContactNumber):
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.ClientContactNumber)
                        @Html.ValidationMessageFor(model => model.ClientContactNumber)
                    </div>
                </td>
            </tr>
            <tr>
                <td style="text-align:right">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.FirstName):
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.FirstName)
                        @Html.ValidationMessageFor(model => model.FirstName)
                    </div>
                </td>
            </tr>
            <tr>
                <td style="text-align:right">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.LastName):
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.LastName)
                        @Html.ValidationMessageFor(model => model.LastName)
                    </div>
                </td>
            </tr>
            <tr>
                <td style="text-align:right">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.DateOfBirth):
                    </div>
                </td>
                <td>
                    <div class="editor-field" id="DateOfBirth">
                        @Html.EditorFor(model => model.DateOfBirth)
                        @Html.ValidationMessageFor(model => model.DateOfBirth)
                    </div>
                </td>
            </tr>
            <tr>
                <td style="text-align:right">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.PhoneNumber):
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.PhoneNumber)
                        @Html.ValidationMessageFor(model => model.PhoneNumber)
                    </div>
                </td>
            </tr>
            <tr>
                <td style="text-align:right">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Deposit):
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Deposit)
                        @Html.ValidationMessageFor(model => model.Deposit)
                    </div>
                </td>
            </tr>
            <tr>
                <td style="text-align:right">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.StatusID, "ClientStatus"):
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.DropDownList("StatusID", String.Empty)
                        @Html.ValidationMessageFor(model => model.StatusID)
                    </div>
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    @Html.HiddenFor(model => model.Id)
                    <p>
                        <input type="submit" value="Save" />
                    </p>
                </td>
            </tr>
        </table>
    </fieldset>
}

            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
            <script type="text/javascript">
                $(document).ready(function () {
                    $("input[type=text]").jqxInput({ width: '200px', height: '25px' });
                    $("input[type=password]").jqxInput({ width: '200px', height: '25px' });
                    $("input[type=submit]").jqxButton({ height: '25px', width: '100px' });
                    $("input[type=checkbox]").jqxInput();
                    $("select").jqxInput({ height: '25px', width: '200px' });
                    $("#DateOfBirth").jqxDateTimeInput({ width: '200px', height: '25px' });
                });
            </script>
