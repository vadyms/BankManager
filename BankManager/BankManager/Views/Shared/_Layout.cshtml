<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
</head>

<body>

    <div class="head">
        <div class="centre">
            <img src="../../Content/Images/logo.png" style="vertical-align:middle">
            Welcome to online banking system
        </div>
    </div>
    <div class="mainmenu">
    @if (Request.IsAuthenticated)
    {
        <strong> You are logged in as: </strong>
        <strong> @Html.Encode(User.Identity.Name)</strong>
        @Html.ActionLink("Logout","Logout","User")
    } else {
        @Html.ActionLink("Reg","Registration","User")
        <span>|</span>
        @Html.ActionLink("Login","Login","User")
        <span>|</span>
        @Html.ActionLink("Data","","DBGrid")
        <span>|</span>
        @Html.ActionLink("Clients","","Client")
    }
    </div>
    <div class="main">
        @RenderBody()
    </div>

    <div class="bottom">
        <div class="centre">
            @@ @DateTime.Now.Year Online Banking. All right reserved.
        </div>
    </div>

</body>
</html>
