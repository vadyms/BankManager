<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
</head>

<body>

    <div class="head">
            <img src="../../Content/Images/logo.png" style="vertical-align:middle">
            Welcome to online banking system
    </div>

    @if (Request.IsAuthenticated)
    {
        <strong> @Html.Encode(User.Identity.Name)</strong>
        @Html.ActionLink("Sign Out","Logout","User")
    } else {
        @Html.ActionLink("Reg","Registration","User")
        <span>|</span>
        @Html.ActionLink("Sign In","Login","User")
    }


    @RenderBody()

    <div class="bottom">
            @@ @DateTime.Now.Year Online Banking. All right reserved.
    </div>
</body>
</html>
